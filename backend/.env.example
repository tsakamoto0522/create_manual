# Server Settings
HOST=0.0.0.0
PORT=8000
DEBUG=False

# CORS Settings (comma-separated origins)
CORS_ORIGINS=http://localhost:5173,http://localhost:3000

# Storage Paths
DATA_DIR=./data
UPLOAD_DIR=./data/uploads
CAPTURE_DIR=./data/captures
INTERMEDIATE_DIR=./data/intermediate
EXPORT_DIR=./data/exports

# Video Settings
MAX_VIDEO_SIZE_MB=500
ALLOWED_VIDEO_EXTENSIONS=mp4,mov,avi,mkv

# Scene Detection
SCENE_THRESHOLD=30.0
MIN_SCENE_DURATION_SEC=2.0
SCENE_DETECTION_METHOD=histogram

# STT (Speech-to-Text)
# STT_ENGINE: 音声認識エンジン (gpt4o / whisper / dummy)
STT_ENGINE=gpt4o
WHISPER_MODEL=base
WHISPER_DEVICE=cpu
WHISPER_LANGUAGE=ja

# GPT-4o Transcribe Settings
GPT4O_TRANSCRIBE_MODEL=gpt-4o-transcribe

# Manual Generation
AUTO_MERGE_THRESHOLD_SEC=5.0
MIN_STEP_DURATION_SEC=3.0

# Export
PDF_ENGINE=playwright
TEMPLATE_DIR=./templates
DEFAULT_TEMPLATE=manual_default.md.j2

# OpenAI API (Required for GPT-4o STT and Summarization)
OPENAI_API_KEY=your_openai_api_key_here
OPENAI_MODEL=gpt-4o
OPENAI_MAX_COMPLETION_TOKENS=2000

# Logging
LOG_LEVEL=INFO
LOG_FORMAT=json
